<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.androidev.coding">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".module.commit.CommitActivity"
            android:label="@string/coding_commit"
            android:theme="@style/SwipeBackTheme" />

        <activity
            android:name=".module.tree.TreeActivity"
            android:theme="@style/SwipeBackTheme" />

        <activity
            android:name=".module.code.CodeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CodeTheme" />

    </application>

</manifest>
