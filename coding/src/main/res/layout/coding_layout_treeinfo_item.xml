<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/coding_tree_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/coding_icon_folder" />

    <View
        android:id="@+id/vertical_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/coding_tree_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/vertical_line"
        android:layout_toRightOf="@id/coding_tree_icon"
        android:maxLines="1"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/coding_tree_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vertical_line"
        android:layout_toRightOf="@id/coding_tree_icon"
        android:maxLines="1"
        android:textSize="13sp" />

</RelativeLayout>